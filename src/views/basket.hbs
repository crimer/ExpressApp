<h1>{{title}}</h1>

<h5>Итоговая цена: {{price}}</h5>
{{#if courses.length}}
<table class="striped">
  <thead>
    <tr>
      <th>Название</th>
      <th>Цена</th>
      <th>Кол-во</th>
      <th>Действия</th>
    </tr>
  </thead>

  <tbody>
    {{#each courses}}
    <tr>
      <td>{{name}}</td>
      <td>{{price}}</td>
      <td>{{count}}</td>
      <td>
        <button class="btn btn-small">Удалить</button>
      </td>
    </tr>
    {{/each}}
    
  </tbody>
</table>
{{else}}
<p>Карзина пуста</p>
{{/if}}