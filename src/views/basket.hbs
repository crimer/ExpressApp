<h1>{{title}}</h1>

<div id="basket">
  {{#if courses.length}}
  <h5 id="totalPrice">Итоговая цена: {{price}}</h5>
  <form action="/orders" method="POST">
    <button type="submit" class="btn">Сделать заказ</button>
  </form>
  <table class="striped">
    <thead>
      <tr>
        <th>Название</th>
        <th>Цена</th>
        <th>Кол-во</th>
        <th>Действия</th>
      </tr>
    </thead>

    <tbody id="basketBody">
      {{#each courses}}
      <tr>
        <td>{{title}}</td>
        <td>{{price}}</td>
        <td>{{count}}</td>
        <td>
          <button class="btn btn-small" id="deleteBtn" data-id="{{_id}}">Удалить</button>
        </td>
      </tr>
      {{/each}}

    </tbody>
  </table>
  {{else}}
  <p>Карзина пуста</p>
  {{/if}}
</div>