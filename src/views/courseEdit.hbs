<h1>Редактировать {{course.title}}</h1>
<form action="/course/edit" method="POST">
  <div class="row">
    <div class="input-field col s12">
      <input name="title" id="title" type="text" class="validate" required min="3" value="{{course.title}}">
      <label for="title">Название курса</label>
      <span class="helper-text" data-error="Введите название"></span>
    </div>
  </div>
  <div class="row">
    <div class="input-field col s12">
      <input name="price" id="price" type="text" class="validate" required min="3" value="{{course.price}}">
      <label for="price">Цена курса</label>
      <span class="helper-text" data-error="Введите цену"></span>
    </div>
  </div>
  <div class="row">
    <div class="input-field col s12">
      <input name="image" id="image" type="text" class="validate" required value="{{course.image}}">
      <label for="image">Url картинка</label>
      <span class="helper-text" data-error="Введите url картинки"></span>
    </div>
  </div>
  <input type="hidden" name="id" value="{{course._id}}">
  <button type="submit" class="waves-effect waves-light btn">Редактировать</button>
</form>
<form action="/course/remove" method="POST" class="deleteCourseForm">
  <input type="hidden" name="id" value="{{course._id}}">
  <button type="submit" class="waves-effect waves-light btn red darken-2">Удалить курс</button>
</form>